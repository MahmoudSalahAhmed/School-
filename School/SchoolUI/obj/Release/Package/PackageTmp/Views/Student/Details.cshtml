@using ViewModels
@model StudentViewModel



<br><br>
    <div class="table-responsive">
        <table class="mb-2 table table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>BirthDate</th>
                    <th>Governate</th>
                    <th>Neighborhood</th>
                    <th>Field</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <th scope="row">@Model.ID</th>
                    <td>@Model.Name </td>
                    <td>@Model.BirthDate.ToLongDateString()</td>
                    <td>@Model.Neighborhood.Governate.Name</td>
                    <th>@Model.Neighborhood.Name</th>
                    <th>@Model.Field.Name</th>
                </tr>


            </tbody>
        </table>
    </div>
        <div class="row">
            <div class="visible-md col-md-4 ">

            </div>
            <div class="col-md-2 col-xs-6">
                <a class="dropdown-item mm-active">
                    @Html.ActionLink("Update", "Update", "Student", new { id = Model.ID }, new { @class = "editbtn" })
                </a>
            </div>
            <div class="col-md-2 col-xs-6">
                <a class="dropdown-item">
                    @Html.ActionLink("Delete", "Delete", "Student", new { id = Model.ID }, new { @class = "editbtn" })
                </a>
            </div>

        </div>
        <div class="student-teachers">
            <div class="s-content">
                <h1>Student's Teachers</h1>
                @Html.ActionLink("Add New Teacher for this Student", "Add", "StudentTeacher", new { id = Model.ID }, new { @class = "editbtn" })

                <h5>Teachers of <Span>@Model.Name</Span></h5>
                <div class="table-responsive">
                    <table class="mb-2 table table-hover table-striped card-body">
                        <thead>
                            <tr>
                                <th>Teacher</th>
                                <th>Teacher Details</th>
                                <th>Update</th>
                                <th>Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (StudentTeacherViewModel StuTeacher in Model.StudentTeachers)
                            {
                                <tr>
                                    <td>@StuTeacher.Teacher.Name </td>
                                    <td>
                                        <a href="@Url.Action("Details","Teacher", new { id = StuTeacher.Teacher.ID })" class="fa fa-long-arrow-right"
                                           aria-hidden="true" style="font-size:25px ; color :#17700f">
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Update","StudentTeacher", new { id = StuTeacher.ID })" class="fa fa-pencil"
                                           aria-hidden="true" style="font-size:25px ; color :#17700f">
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Delete","StudentTeacher", new { id = StuTeacher.ID })" class="fa fa-trash"
                                           aria-hidden="true" style="font-size:25px ; color :#821d1d">
                                        </a>
                                    </td>
                                </tr>


                            }
                        </tbody>
                    </table>
                </div>


                </div>

        </div>








