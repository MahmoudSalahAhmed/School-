@using ViewModels
@model GovernateViewModel


<br>
<br>
<div class="row">
    <a href="@Url.Action("Governate", "Governate")" class="editbtn"><i class="fa fa-chevron-left" style="margin-right: 20px;"></i>Back</a>
</div>
<br>
<div class="card-body">
    <h5 class="card-title" style="color:#980827">Update Governate</h5>

    @using (Html.BeginForm("Update", "Governate", FormMethod.Post))
    {
        <div class="form-row">
            <div class="col-md-4 col-xs-12">
                <div class="position-relative form-group">
                    <label for="name">Name</label>
                    @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(i => i.Name)
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <br />
                <br />  
                <button type="submit" class="editbtn">Update</button>
            </div>
        </div>
    }

</div>

