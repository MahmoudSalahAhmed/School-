@using ViewModels
@model IEnumerable<StudentViewModel>


<br><br>
<div class="row">
    @Html.ActionLink("Add Student", "Add", "Student", null, new { @class = "editbtn" })
</div>
<br>
<div class="table-responsive">
    <table class="mb-2 table table-hover table-striped card-body">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>BirthDate</th>
                <th>Governate</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (StudentViewModel Student in Model)
            {
                <tr>
                    <th>@Student.ID</th>
                    <td>@Student.Name </td>
                    <td>@Student.BirthDate.ToLongDateString()</td>
                    <td>@Student.Neighborhood.Governate.Name</td>
                    <td>
                        <a href="@Url.Action("Details","Student", new { id = Student.ID })" class="fa fa-long-arrow-right"
                           aria-hidden="true" style="font-size:25px ; color :#17700f">
                        </a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>





